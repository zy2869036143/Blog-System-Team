<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.markerhub.Dao.PraiseDao">
    <insert id="addpraise" parameterType="com.markerhub.entity.Praise">
        insert into m_praise value (#{p_username},#{p_blogid},#{p_time})
    </insert>
    <delete id="delpraise" parameterType="com.markerhub.entity.Praise">
        delete from m_praise where p_username = #{p_username} and p_blogid = #{p_blogid}
    </delete>
    <select id="getpraise" parameterType="String" resultType="com.markerhub.entity.Praise">
        select * from m_praise where p_username = #{p_username}
    </select>
</mapper>
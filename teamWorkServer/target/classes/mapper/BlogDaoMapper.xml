<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.markerhub.Dao.BlogDao">
    <select id="getblogs" resultType="com.markerhub.entity.Blog">
        select * from m_blog
    </select>
    <update id="updateblog" parameterType="com.markerhub.entity.Blog">
        update m_blog set praise = #{praise} where id = #{id}
    </update>
    <select id="getByid" parameterType="int" resultType="com.markerhub.entity.Blog">
        select * from m_blog where id = (select p_blogid from m_praise where p_id = #{id})
    </select>
</mapper>